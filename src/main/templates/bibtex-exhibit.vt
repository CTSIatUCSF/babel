<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <link rel="stylesheet" href="http://simile.mit.edu/styles/default.css" type="text/css" />
        <title>Simile | Babel | Bibtex Preview in Exhibit</title>
        <script src="http://simile.mit.edu/ajax/api/simile-ajax-api.js" type="text/javascript"></script>
        <script src="http://simile.mit.edu/exhibit/api/exhibit-api.js" type="text/javascript"></script>
        <script type="text/javascript">
            var data = $data;
            var exhibit;
        
            function onLoad() {
                var configuration = {
                    BrowseEngine: {
                        facets: [
                            ".type",
                            ".hasAuthor",
                            ".hasYear"
                        ]
                    },
                    ItemView: {
                        viewSelector: function(itemID, exhibit) { return "views/publication.xml"; }
                    },
                    ViewPanel: {
                        views: [
                            {   constructor: Exhibit.TileView,
                                label: "Details",
                                configuration: {
                                    orders: [
                                        ".type"
                                    ],
                                    possibleOrders: [
                                        ".type",
                                        ".hasAuthor",
                                        ".hasYear",
                                        ".label"
                                    ]
                                }
                            }
                        ],
                        initialView: 0
                    }
                };
                    
                exhibit = Exhibit.create(
                    document.getElementById("control-panel"),
                    document.getElementById("browse-panel"),
                    document.getElementById("view-panel"),
                    configuration
                );
                
                exhibit._loadJSON(data, exhibit.getBaseURL(document.location.href));
                
                var types = new Exhibit.Set();
                for (t in data.types) {
                    types.add(t);
                }
                
                exhibit.getBrowseEngine().setRootCollection(
                    exhibit.getDatabase().getSubjectsUnion(types, "type")
                );
            }
        </script>
        <style>
            div.publication {
                padding:    0.5em;
                border:     1px solid #ccc; 
            }
            div.title {
                font-weight: bold;  
            }
            div.authors {
                font-style: italic;
            }
            
            #view-panel h1 {
                font-size:      120%;
                background:     none;
                border:         none;
            }
        </style>
    </head>
    <body onload="onLoad();">
        <ul id="path">
            <li><a href="http://simile.mit.edu/" title="Home">SIMILE</a></li>
            <li><span>Preview of Bibtex Data in Exhibit</span></li>
        </ul>
        <div id="body">
            <h1>Bibtex Preview in Exhibit</h1>
            <table width="100%">
                <tr valign="top">
                    <td>
                        <div id="control-panel"></div>
                        <div id="view-panel"></div>
                    </td>
                    <td width="30%">
                        <div id="browse-panel"></div>
                    </td>
                </tr>
            </table>
        </div>
    </body>
</html>
