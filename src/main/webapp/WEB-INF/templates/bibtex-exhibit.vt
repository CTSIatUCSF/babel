<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <link rel="stylesheet" href="http://simile.mit.edu/styles/default.css" type="text/css" />
        <title>Simile | Babel | Bibtex Preview in Exhibit</title>
        <script src="http://static.simile.mit.edu/exhibit/api/exhibit-api.js" type="text/javascript"></script>
        <script type="text/javascript">
            function getForm() {
                return document.getElementById("data-form");
            }
            function getTextarea() {
                return document.getElementById("data-textarea");
            }
            function onLoad() {
                var data = eval("(" + getTextarea().value + ")");
                
                var exhibit = Exhibit.create(data, "Publication");
                document.getElementById("close-button").onclick = function(evt) {
                    evt = (evt) ? evt : event;
                    
                    getForm().style.display = "none";
                    
                    evt.stopPropagation();
                    return false;
                };
            }
            function copyRawData() {
                getForm().style.display = "block";
                
                var textarea = getTextarea();
                textarea.focus();
                textarea.select();
            }
            function downloadRawData() {
                getForm().submit();
            }
        </script>
        <style>
            div.title {
                font-weight: bold;  
            }
            
            div.publication {
                padding:        0.5em;
                border:         1px solid #ccc; 
                margin-bottom:  1em;
            }
            div.authors {
                font-style:     italic;
            }
            div.other-properties {
                font-size:      80%;
                color:          #888;
                font-style:     italic;
                margin-top:     0.5em;
            }
            
            div.author {
                padding:        0.5em;
                border:         1px solid #ccc; 
                margin-bottom:  1em;
            }
            ol.publications {
            }
            
            #view-panel h1 {
                font-size:      120%;
                background:     none;
                border:         none;
            }
            #preview-controls {
                padding:        1em;
                border:         1px dashed #aaa;
                margin-bottom:  1em;
                text-align:     center;
            }
            #data-form {
                display:    none;
                position:   absolute;
                top:        10em;
                left:       15%;
                width:      70%;
                z-index:    1000;
                padding:    2em;
                border:     2px solid #888;
                background: #FFFFE0;
            }
            #data-form textarea {
                width:      100%;
            }
        </style>
    </head>
    <body onload="onLoad();">
        <ul id="path">
            <li><a href="http://simile.mit.edu/" title="Home">SIMILE</a></li>
            <li><a href="http://simile.mit.edu/babel/" title="Babel">Babel</a></li>
            <li><span>Preview of Bibtex Data in Exhibit</span></li>
        </ul>
        <div id="body">
            <h1>Bibtex Preview in Exhibit</h1>
            <div id="preview-controls">
                <button onclick="copyRawData();">Copy Raw Data</button>
                <button onclick="downloadRawData();">Download Raw Data</button>
            </div>
            <table width="100%">
                <tr valign="top">
                    <td>
                        <div id="exhibit-control-panel" ex:exporters="Exhibit.BibtexExporter"></div>
                        <div id="exhibit-view-panel">
                            <div ex:role="exhibit-lens" ex:itemTypes="Publication" class="publication">
                                <span ex:control="copy-button" style="float: right"></span>
                                <div class="title"><span ex:content=".label"></span></div>
                                
                                <div class="authors"><span ex:content=".author"></span></div>
                                <p ex:content=".abstract"></p>
                                <div class="other-properties">Other properties have been converted but not shown in this generic view.</div>
                            </div>
                            <div ex:role="exhibit-lens" ex:itemTypes="Author" class="author">
                                <span ex:control="copy-button" style="float: right"></span>
                                <div class="title"><span ex:content=".label"></span></div>
                                
                                <ol class="publications" ex:content="!author">
                                    <li ex:content="value"></li>
                                </ol>
                            </div>
                            <div ex:role="exhibit-view"
                                ex:viewClass="Exhibit.TileView"
                                ex:label="Details"
                                ex:orders=".pub-type"
                                ex:possibleOrders=".pub-type, .author, .year, .label"></div>
                        </div>
                    </td>
                    <td width="30%">
                        <div id="exhibit-browse-panel"
                            ex:facets=".pub-type, .author, .year"></div>
                    </td>
                </tr>
            </table>
        </div>
        <form id="data-form" action="reflector?mimetype=application/json" method="post" enctype="multipart/form-data">
            <p>Copy the raw data:</p>
            <textarea rows="15" wrap="off" id="data-textarea" name="content">$utilities.escapeHtml($data)</textarea>
            <p style="text-align: center;"><button id="close-button">Close</button></p>
        </form>
    </body>
</html>
